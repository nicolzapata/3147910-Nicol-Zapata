@model gestion_tienda.Models.VentaCreateViewModel

@{
    ViewData["Title"] = "Crear Venta";
}

<h1>Crear Venta</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="ClienteId"></label>
        <select asp-for="ClienteId" asp-items="ViewBag.ClienteId" class="form-control">
            <option value="">-- Seleccione un cliente --</option>
        </select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <h4>Productos</h4>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th style="width:120px;">Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Items[i].ProductoNombre
                        <input type="hidden" asp-for="Items[@i].ProductoId" />
                        <input type="hidden" asp-for="Items[@i].ProductoNombre" />
                        <input type="hidden" asp-for="Items[@i].PrecioUnitario" />
                    </td>
                    <td>@Model.Items[i].PrecioUnitario.ToString("C")</td>
                    <td>
                        <input asp-for="Items[@i].Cantidad" class="form-control" min="0" />
                        <span asp-validation-for="Items[@i].Cantidad" class="text-danger"></span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Guardar Venta</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
