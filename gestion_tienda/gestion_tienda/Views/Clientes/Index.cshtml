@model IEnumerable<gestion_tienda.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container-fluid py-4">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold text-primary">
                <i class="bi bi-people-fill me-2"></i>Gestión de Clientes
            </h1>
            <p class="text-muted">Administra la información de tus clientes</p>
        </div>
    </div>

    <!-- Barra de búsqueda y botón crear -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <form method="get" class="mb-3">
                <div class="input-group shadow-sm">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" name="search" value="@Context.Request.Query["search"]"
                           class="form-control border-start-0"
                           placeholder="Buscar por nombre o email..." />
                    <button class="btn btn-primary px-4" type="submit">
                        <i class="bi bi-search me-1"></i> Buscar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Limpiar
                    </a>
                </div>
            </form>
        </div>
        <div class="col-lg-4 text-lg-end">
            <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Cliente
            </a>
        </div>
    </div>

    <!-- Tabla de clientes -->
    <div class="row">
        <div class="col">
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0 align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th class="ps-4">
                                        <i class="bi bi-person me-2"></i>@Html.DisplayNameFor(model => model.NombreCompleto)
                                    </th>
                                    <th>
                                        <i class="bi bi-envelope me-2"></i>@Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        <i class="bi bi-geo-alt me-2"></i>@Html.DisplayNameFor(model => model.Direccion)
                                    </th>
                                    <th>
                                        <i class="bi bi-telephone me-2"></i>@Html.DisplayNameFor(model => model.Telefono)
                                    </th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4 fw-semibold">@item.NombreCompleto</td>
                                        <td>
                                            <span class="text-muted">@item.Email</span>
                                        </td>
                                        <td>@item.Direccion</td>
                                        <td>@item.Telefono</td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.Id"
                                                   class="btn btn-warning"
                                                   title="Editar">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id"
                                                   class="btn btn-info"
                                                   title="Detalles">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id"
                                                   class="btn btn-danger"
                                                   title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

