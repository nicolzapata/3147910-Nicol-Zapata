@{
}
@model IEnumerable<CruddNativo.Models.Producto>//Vista para mostrar la lista de productos

<div class="row">
    <table>
        <thead>
            <tr>
                <td @Html.DisplayNameFor(p => p.Id)></td>
                <td @Html.DisplayNameFor(p => p.Nombre)></td>
                <td @Html.DisplayNameFor(p => p.Precio)></td>
                <td @Html.DisplayNameFor(p => p.Stock)></td>
                <td>Acciones</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Precio</td>
                    <td>@item.Stock</td>
                </tr>
            }
        </tbody>
    </table>

</div>